<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/navbar') %>

  <div class="flex">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg min-h-screen hidden md:block">
      <div class="h-full px-3 py-6">
        <nav class="space-y-2">
          <a href="/dashboard/admin" class="flex items-center px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md font-medium">
            <i class="fas fa-home w-5 h-5 mr-3"></i> Dashboard
          </a>
          <a href="/clients" class="flex items-center px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md font-medium">
            <i class="fas fa-users w-5 h-5 mr-3"></i> Clients
          </a>
          <a href="/employees" class="flex items-center px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md font-medium">
            <i class="fas fa-user-tie w-5 h-5 mr-3"></i> Employees
          </a>
          <a href="/employees/add" class="flex items-center px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md font-medium">
            <i class="fas fa-user-plus w-5 h-5 mr-3"></i> Add Employee
          </a>
          <a href="/admin/status-options" class="flex items-center px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md font-medium">
            <i class="fas fa-tags w-5 h-5 mr-3"></i> Status Options
          </a>
        </nav>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8">
      <div class="space-y-8">
        <!-- Welcome Section -->
        <div class="bg-white rounded-lg shadow p-8 flex flex-col md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome, <%= user ? user.name : '' %></h1>
            <p class="text-gray-600">Company: <%= user ? user.companyName : '' %></p>
          </div>
          <div class="mt-6 md:mt-0 flex space-x-4">
            <a href="/clients" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-md shadow hover:bg-indigo-700 transition">
              <i class="fas fa-users mr-2"></i> Manage Clients
            </a>
            <a href="/employees/add" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md shadow hover:bg-green-700 transition">
              <i class="fas fa-user-plus mr-2"></i> Add Employee
            </a>
          </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white rounded-lg shadow p-6 flex items-center">
            <div class="p-3 rounded-full bg-indigo-100 text-indigo-600">
              <i class="fas fa-users text-xl"></i>
            </div>
            <div class="ml-4">
              <h2 class="text-gray-600 text-sm">Total Clients</h2>
              <p class="text-2xl font-semibold text-gray-900"><%= typeof totalClients !== 'undefined' ? totalClients : 0 %></p>
            </div>
          </div>
          <div class="bg-white rounded-lg shadow p-6 flex items-center">
            <div class="p-3 rounded-full bg-green-100 text-green-600">
              <i class="fas fa-user-tie text-xl"></i>
            </div>
            <div class="ml-4">
              <h2 class="text-gray-600 text-sm">Total Employees</h2>
              <p class="text-2xl font-semibold text-gray-900"><%= typeof totalEmployees !== 'undefined' ? totalEmployees : 0 %></p>
            </div>
          </div>
          <div class="bg-white rounded-lg shadow p-6 flex items-center">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
              <i class="fas fa-chart-line text-xl"></i>
            </div>
            <div class="ml-4">
              <h2 class="text-gray-600 text-sm">Active Projects</h2>
              <p class="text-2xl font-semibold text-gray-900">0</p>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <a href="/clients" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <i class="fas fa-users text-indigo-600 mr-3"></i>
              <span>Manage Clients</span>
            </a>
            <a href="/employees" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <i class="fas fa-user-tie text-indigo-600 mr-3"></i>
              <span>Manage Employees</span>
            </a>
            <a href="/employees/add" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <i class="fas fa-user-plus text-indigo-600 mr-3"></i>
              <span>Add Employee</span>
            </a>
            <a href="/admin/status-options" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <i class="fas fa-tags text-indigo-600 mr-3"></i>
              <span>Manage Status</span>
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>

  <%- include('../partials/footer') %>

  <script>
    // Function to check if the context is secure
    function isSecureContext() {
      return window.isSecureContext || window.location.protocol === 'https:' || window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
    }

    // Function to get user's location
    function getLocation() {
      // Skip location tracking if not in secure context
      if (!isSecureContext()) {
        console.log('Skipping location tracking - not in secure context');
        return;
      }

      if (!navigator.geolocation) {
        console.error('Geolocation is not supported by your browser');
        return;
      }

      const options = {
        enableHighAccuracy: true,
        timeout: 10000,
        maximumAge: 0
      };

      navigator.geolocation.getCurrentPosition(
        // Success callback
        async (position) => {
          const { latitude, longitude } = position.coords;
          
          try {
            const response = await fetch('/auth/api/location-log', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({
                latitude,
                longitude,
                timestamp: new Date().toISOString()
              })
            });

            const data = await response.json();
            if (!data.success) {
              console.error('Failed to update location:', data.error);
            }
          } catch (err) {
            console.error('Error updating location:', err);
          }
        },
        // Error callback
        (error) => {
          console.error('Error getting location:', error);
        },
        options
      );
    }

    // Only try to get location if in secure context
    if (isSecureContext()) {
      document.addEventListener('DOMContentLoaded', getLocation);
    }
  </script>
</body>
</html>