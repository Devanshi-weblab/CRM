<!DOCTYPE html>
<html>
<head>
  <title>Client List</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h2>All Clients</h2>
    <a href="/clients/add" class="btn btn-success mb-3">Add Client</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Contact</th>
          <th>Email</th>
          <th>Meeting Date</th>
          <th>Added By</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% clients.forEach(client => { %>
          <tr>
            <td><%= client.name %></td>
            <td><%= client.contactNumber %></td>
            <td><%= client.email %></td>
            <td><%= client.meetingDate ? client.meetingDate.toDateString() : 'N/A' %></td>
            <td><%= client.addedBy?.name || 'Unknown' %></td>
            <td>
              <a href="/clients/edit/<%= client._id %>" class="btn btn-primary btn-sm">Edit</a>
              <form action="/clients/delete/<%= client._id %>" method="POST" style="display:inline;">
                <input type="hidden" name="userId" value="<%= client.addedBy?._id %>">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
