<h2>Edit Employee</h2>
<form method="POST" action="/employees/edit/<%= employee._id %>">
  <div class="form-group">
    <label>Name:</label>
    <input name="name" class="form-control" value="<%= employee.name %>" required>
  </div>
  <div class="form-group">
    <label>Email:</label>
    <input name="email" type="email" class="form-control" value="<%= employee.email %>" required>
  </div>
  <button class="btn btn-primary">Update Employee</button>
</form>
